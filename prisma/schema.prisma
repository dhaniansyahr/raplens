generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      Role     @default(ORANG_TUA)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String?
}

model Siswa {
  id             Int      @id @default(autoincrement())
  nama           String
  nisn           String   @unique
  nis            String   @unique
  tempat_lahir   String
  tanggal_lahir  DateTime
  alamat         String
  agama          String
  nama_ayah      String
  nama_ibu       String
  pekerjaan_ayah String
  pekerjaan_ibu  String
  jenis_kelamin  String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

enum Role {
  ORANG_TUA
  GURU
}
